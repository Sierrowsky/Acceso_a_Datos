<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="15dp"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LISTADO Y ADAPTADORES"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:fontFamily="serif"/>

    <!-- gestion de spinner -->
    <Button
        android:id="@+id/btn1_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner sin adaptador"
        android:onClick="onClickBtnListados"/>

    <Button
        android:id="@+id/btn2_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner con adaptador"
        android:onClick="onClickBtnListados"/>

    <Button
        android:id="@+id/btn3_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner con adaptador + recurso"
        android:onClick="onClickBtnListados"/>

    <Button
        android:id="@+id/btn4_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner dinámico ¿?"
        android:onClick="onClickBtnListados"/>

    <Button
        android:id="@+id/btn5_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner dinámico"
        android:onClick="onClickBtnListados"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/black"
        android:layout_margin="15dp"/>
    <!-- gestion de ListView -->
    <Button
        android:id="@+id/btn1_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView"
        android:onClick="onClickBtnListados"/>

    <Button
        android:id="@+id/btn2_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView desde recurso"
        android:onClick="onClickBtnListados"/>
    <Button
        android:id="@+id/btn3_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView Dinamico"
        android:onClick="onClickBtnListados"/>
    <Button
        android:id="@+id/btn4_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView personalizado"
        android:onClick="onClickBtnListados"/>
    <Button
        android:id="@+id/btn5_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView con diferentes imagenes"
        android:onClick="onClickBtnListados"/>
    <Button
        android:id="@+id/btn6_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ListView con diferentes imagenes TYPEDARRAY"
        android:onClick="onClickBtnListados"/>

</LinearLayout>